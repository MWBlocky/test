{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "zeroConfig": false,
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/main.ts",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "*",
        "Access-Control-Allow-Headers": "X-Requested-With,Content-Type,Accept"
      }
    }
  ],
  "crons": [
    {
      "path": "/",
      "schedule": "21 21 * * 4"
    }
  ],
  "env": {
    "CRON_SECRET": "secret"
  }
}